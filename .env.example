# Application
APP_NAME="Social Automation SaaS"
ENV=production  # Change to 'development' for local dev
DEBUG=False  # Change to 'True' for local dev
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
API_V1_PREFIX=/api/v1

# Database (Railway/Render/Fly.io will auto-populate this)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/social_automation
# For local development, you can use SQLite:
# DATABASE_URL=sqlite+aiosqlite:///./social_automation.db

# Redis (for Celery) - Railway/Render/Fly.io will auto-populate this
# For free Redis: https://upstash.com (10K commands/day free)
REDIS_URL=redis://localhost:6379/0

# OpenRouter (Unified AI provider - ONE API KEY for all models!)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
USE_OPENROUTER=true

# Content Generation Model (via OpenRouter)
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet  # For platform variations
USE_GEMINI=true  # Set to 'true' to use Gemini for main content generation

# Content Polisher Model (via OpenRouter)
POLISHER_MODEL=openai/gpt-4-turbo-preview  # GPT-4 for grammar/polish

# Legacy OpenAI (optional - not needed if using OpenRouter)
# OPENAI_API_KEY=sk-your-openai-api-key

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=social-automation-media

# Or use Cloudflare R2 (S3-compatible, cheaper)
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key

# Google APIs (for Google Business, Drive)
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Meta/Facebook
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

# CORS (Update with your production domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000,http://localhost:8000

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (Update with your production domain)
FRONTEND_URL=https://yourdomain.com

# Placid (image generation - primary, uses branded templates)
PLACID_API_KEY=your-placid-api-key
PLACID_TEMPLATE_ID=your-template-uuid

# Fal AI (image generation - backup, uses AI to generate images)
FAL_API_KEY=your-fal-api-key

# Publer (social media publishing)
PUBLER_API_KEY=your-publer-api-key
PUBLER_WORKSPACE_ID=your-workspace-id

# Google Sheets (logging)
GOOGLE_SHEETS_ID=your-google-sheet-id
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Gemini Model (via OpenRouter)
GEMINI_MODEL=google/gemini-pro-1.5  # or google/gemini-flash-1.5
USE_GEMINI=false  # Set to 'true' to use Gemini for content generation

# Approvals
TEAM_APPROVAL_EMAIL=team@yourdomain.com

# Retry Configuration
RETRY_DELAY_SECONDS=15
MAX_RETRY_ATTEMPTS=3
